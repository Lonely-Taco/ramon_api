{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://ramon.api/books",
  "$description": "schema to define books structure",
  "type": "object",
  "properties": {
    "bookID": {
      "type": "integer"
    },
    "title": {
      "type": "string"
    },
    "average_rating": {
      "type": "number"
    },
    "authors": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "ratings_count": {
      "type": "integer"
    },
    "release_date": {
      "type": "integer"
    }
  },
  "required": [
    "bookID",
    "title",
    "average_rating",
    "authors",
    "ratings_count",
    "release_date"
  ]
}
