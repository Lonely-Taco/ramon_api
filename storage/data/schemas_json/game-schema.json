{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://ramonapi.com/books",
    "$description": "schema to define books structure",
    "type": "object",
    "properties": {
        "name": {
            "type": "string"
        },
        "release_date": {
            "type": "string",
            "format": "date"
        },
        "categories": {
            "type": "string"
        },
        "genres": {
            "type": "string"
        },
        "positive_ratings": {
            "type": "integer"
        },
        "negative_ratings": {
            "type": "integer"
        }
    },
    "required": [
        "name",
        "release_date",
        "categories",
        "positive_ratings",
        "negative_ratings"
    ]
}
