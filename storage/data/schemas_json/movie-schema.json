{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://ramon.api/movie",
  "$description": "schema to define movie structure",
  "type": "object",
  "properties": {
    "id": {
      "type": "integer"
    },
    "title": {
      "type": "string"
    },
    "year": {
      "type": "integer"
    },
    "IMDb": {
      "type": "number"
    },
    "genres": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "runtime": {
      "type": "integer"
    }
  },
  "required": [
    "id",
    "title",
    "year",
    "IMDb",
    "genres",
    "runtime"
  ]
}


